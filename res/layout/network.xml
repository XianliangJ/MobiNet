<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dip" >

    <RelativeLayout
        android:layout_width="70dip"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btnRun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Run" />

        <TextView
            android:id="@+id/targetString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnRun"
            android:layout_marginTop="8dp"
            android:text="目标地址:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dataConnectionString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/targetString"
            android:layout_marginTop="8dp"
            android:text="数据连接:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/wifiConnectionString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dataConnectionString"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text="WiFi连接:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/wifiInfoString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wifiConnectionString"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text="WiFi参数:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/macAddressString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wifiInfoString"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text="mac地址:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ipAddressString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/macAddressString"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text="IP地址:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/throughputString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ipAddressString"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text="吞吐量:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dnsLatencyString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/throughputString"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text="DNS时延:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pingLatencyString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dnsLatencyString"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text="ping时延:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/httpLatencyString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pingLatencyString"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text="http时延:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/testStateString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/httpLatencyString"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text="Test状态:"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="400dip"
        android:layout_height="match_parent" >

        <Spinner
            android:id="@+id/measurementTypeSpinner"
            android:layout_width="200dp"
            android:layout_height="41dp" />

        <EditText
            android:id="@+id/targetAddress"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/measurementTypeSpinner"
            android:text="www.tsinghua.edu.cn"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dataConnection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/targetAddress"
            android:layout_marginTop="8dp"
            android:text=""
            android:textSize="15sp" />

        <TextView
            android:id="@+id/wifiConnection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dataConnection"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text=""
            android:textSize="15sp" />

        <TextView
            android:id="@+id/wifiInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wifiConnection"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text=""
            android:textSize="15sp" />

        <TextView
            android:id="@+id/macAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wifiInfo"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text=""
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ipAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/macAddress"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text=""
            android:textSize="15sp" />

        <TextView
            android:id="@+id/throughput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ipAddress"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text=""
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dnsLatency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/throughput"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text=""
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pingLatency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dnsLatency"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text=""
            android:textSize="15sp" />

        <TextView
            android:id="@+id/httpLatency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pingLatency"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text=""
            android:textSize="15sp" />

        <TextView
            android:id="@+id/testState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/httpLatency"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text=""
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>